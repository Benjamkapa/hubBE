            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"provider@example.com\",\n  \"password\": \"password123\",\n  \"display_name\": \"Test Provider\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has user data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    pm.expect(jsonData.user).to.have.property('id');",
                  "    pm.expect(jsonData.user.email_verified).to.be.false;",
                  "    pm.environment.set('user_id', jsonData.user.id);",
                  "});",
                  "",
                  "// Extract verification token from response (development mode)",
                  "if (jsonData.verificationToken) {",
                  "    pm.environment.set('verification_token', jsonData.verificationToken);",
                  "    console.log('Verification token saved:', jsonData.verificationToken);",
                  "}",
                  "",
                  "console.log('Signup successful. User ID:', jsonData.user.id);"
                ]
              }
            }
          ]
