#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/bin/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/bin/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/postman-collection-transformer@4.1.8/node_modules:/mnt/c/PROJECTS/BE/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/bin/transform-collection.js" "$@"
else
  exec node  "$basedir/../../../../../postman-collection-transformer@4.1.8/node_modules/postman-collection-transformer/bin/transform-collection.js" "$@"
fi
